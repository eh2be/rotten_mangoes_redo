<h1>Rotten Mangoes</h1>
<hr>
<%= link_to "Add a movie!", new_movie_path %>
<hr>
<% @movies.each do |movie| %>
  <h2><%= link_to movie.title, movie_path(movie) %></h2>
  <h3>Release Date: <%= formatted_date(movie.release_date) %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes | <%= movie.review_average %>/10 mangoes</h4>
  <p><%= movie.description %></p>
  <hr>
<% end %>   