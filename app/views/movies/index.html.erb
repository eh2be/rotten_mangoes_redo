<h1>Rotten Mangoes</h1>
<hr>

<%= form_tag movies_path, method: 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<%= link_to "Add a movie!", new_movie_path %>
<hr>
<% @movies.each do |movie| %>

  <%= link_to image_tag(movie.image_url(:thumb).to_s), movie_path(movie) %>
  <h2><%= link_to movie.title, movie_path(movie) %></h2>
  <h3>Release Date: <%= formatted_date(movie.release_date) %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes | <%= movie.review_average %>/10 mangoes</h4>
  <p><%= movie.description %></p>
  <hr>
<% end %>   